<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width; maximum-scale=1; minimum-scale=1" />
        <title></title>
        <!--jquery-css-mobile-->
        <link rel="stylesheet" href="/assets/jquery.mobile-1.4.5.min.css" />
        <link rel="stylesheet" href="/assets/jquery.tagit.css" />
        <link rel="stylesheet" href="/assets/tagit.ui-zendesk.css" />
        <!--Main-css-->
        <link rel="stylesheet" href="/assets/CssMobile.css" />
    </head>
    <body>
        <!--Page1-->
        <div data-role="page" id="page1">
            <!-- /header -->
            <div data-role="header"></div>

            <!-- /content -->
            <div role="main" class="ui-content">
                <div class="ui-block-a">
                    <h1><%= @title %></h1>
                </div>
            </div>
            
            <!-- /footer -->
            <div data-role="footer">
                <button class="ui-block-a" id="StartApp"></button>
            </div>
        </div>

        <!--Page2-->
        <div data-role="page" id="page2">
            <!-- /header -->
            <div data-role="header" >
                <div class="ui-grid-a">
                    <div id="navbar" class="ui-block-a">
                        <ul><p>navbar menu</p></[></ul>
                    </div>
                    <div id="logo" class="ui-block-b">
                        <p>Logo</p>
                    </div>
                </div>

            </div>
            
            <!-- /content -->
            <div role="main" class="ui-content">
                <div class="ui-grid-b">
                    <div class="ui-block-a" id="AddFridge"></div>

                    <div class="ui-block-b" id="FridgeStudent"></div>

                    <div class="ui-block-b" id="FridgeSingle"></div>
                </div>
            </div>

            <!-- /footer -->
            <div data-role="footer"></div>

        </div>


        <!--page3-->
        <div data-role="page" id="page3">

            <!-- /header -->
            <div data-role="header">
                <h1>Page Title</h1>
            </div>

            <!-- /content -->
            <div role="main" class="ui-content">
                <ul id="myTags">   
                </ul>
                <button id="boom" type="button">submit</button>
                <div id="CamreShoot" class="ui-content">
                    <video id="video" class="ui-btn-a" data-theme="a" width="320" height="480" autoplay></video>
                    <canvas id="canvas" data-theme="a" width="640" height="480"></canvas>
                </div>
                
                <div class="ButtonCamre">
                    <input class="ui-btn ui-btn-a" type="file" capture="camera" accept="image/*" id="snap" name="camerainput" />
                <!--<button class="ui-btn ui-btn-a" id="snap">Snap</button>-->
                    <button class="ui-btn ui-btn-b" id="snapAgain">SnapAgain</button>
                </div>
            </div>

            <!-- /footer -->
            <div data-role="footer">
                <h4>Page Footer</h4>
            </div>
        </div>

        <!--Page4-->
        <div data-role="page" id="page4">

            <div data-role="header">
                <div class="ui-grid-a">
                    <div id="RichMen" class="ui-block-a">
                        <h1>נתונים לאן הלך הכסף שלנו</h1>
                    </div>

                </div><!-- /header -->

                <div role="main" class="ui-content">
                    <div class="ui-grid-b">
                        <div id="HereTheMoney" class="ui-block-a" style="width:100%">
                            <div class="ui-block-a" style="width:100px;height:100px;background-color:black"></div>
                            <div class="ui-block-b" style="width:100px;height:100px;background-color:red"></div>
                            <div class="ui-block-c" style="width:100px;height:100px;background-color:yellowgreen"></div>
                        </div>
                    </div>
                </div><!-- /content -->

                <div data-role="footer">

                </div><!-- /footer -->
            </div>
        </div>
        <script type="text/javascript" src="/assets/lib/jquery-1.11.3.min.js"></script>
        <script src="/assets/lib/jquery.mobile-1.4.5.min.js"></script>
        <script type="text/javascript" src="/assets/lib/tag-it.min.js"></script>
        <script type="text/javascript" src="/assets/lib/jquery-ui.min.js"></script>
        <script type="text/javascript" src="/assets/appMobile.js"></script>
        <script type="text/javascript" src="/assets/Photo.js"></script>
        <script type="text/javascript" src="/assets/datajson.js"></script>
        <script type="text/javascript" src="/assets/Tag.js"></script>

